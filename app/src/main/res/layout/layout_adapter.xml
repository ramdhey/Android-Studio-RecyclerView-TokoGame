<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_kecil">

    <ImageView
        android:id="@+id/gambarGame"
        android:layout_width="274dp"
        android:layout_height="120dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gratisapi" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logoGame"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="5dp"
        android:src="@drawable/logogratisapi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gambarGame" />

    <TextView
        android:id="@+id/judul"
        android:layout_width="215dp"
        android:layout_height="26dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="19dp"
        android:text="Nama Game"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/logoGame"
        app:layout_constraintTop_toBottomOf="@+id/gambarGame" />


    <TextView
        android:id="@+id/harga"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="16dp"
        android:text="Harga"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/logoGame"
        app:layout_constraintTop_toBottomOf="@+id/gambarGame" />
</androidx.constraintlayout.widget.ConstraintLayout>